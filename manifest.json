{
  "manifest_version": 2,

  "name": "Mad Libber",
  "description": "Create a Mad Lib on any webpage!",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "background" : {
    "scripts" : ["background.js"]
  },

  "permissions": ["tabs", "<all_urls>"],

  "browser_action": {
    "default_icon": "icon.png"
  }
}
